<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:orientation="vertical">

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="100dp"
			android:id="@+id/atvout"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal">

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:text="简易计算器，输入您需要进行的运算，退出键退出。"
			android:id="@+id/atv"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal">

		<Button
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="1"
			android:id="@+id/bu1"/>

		<Button
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="2"
			android:id="@+id/bu2"/>

		<Button
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:text="3"
			android:id="@+id/bu3"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal">

		<Button
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="4"
			android:id="@+id/bu4"/>

		<Button
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="5"
			android:id="@+id/bu5"/>

		<Button
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:text="6"
			android:id="@+id/bu6"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal">

		<Button
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="7"
			android:id="@+id/bu7"/>

		<Button
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="8"
			android:id="@+id/bu8"/>

		<Button
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:text="9"
			android:id="@+id/bu9"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal">

		<Button
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="+"
			android:id="@+id/bujia"/>

		<Button
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="0"
			android:id="@+id/bu0"/>

		<Button
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:text="-"
			android:id="@+id/bujian"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal">

		<Button
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="×"
			android:id="@+id/buchen"/>

		<Button
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="÷"
			android:id="@+id/buchu"/>

		<Button
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:text="="
			android:id="@+id/buden"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:orientation="horizontal">

		<Button
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:text="退出"
			android:onClick="onExitButtonClick"/>

	</LinearLayout>

</LinearLayout>

